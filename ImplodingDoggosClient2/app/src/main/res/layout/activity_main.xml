<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/design_default_color_error">


    <Button
        android:id="@+id/btn_signIn"
        style="@style/Widget.Material3.Button"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="572dp"
        android:fontFamily="casual"
        android:text="Sign in"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_playOnline"
        style="@style/Widget.Material3.Button"
        android:layout_width="285dp"
        android:layout_height="56dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="60dp"
        android:backgroundTintMode="add"
        android:fontFamily="casual"
        android:text="Play Online"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_playLocal"
        style="@style/Widget.Material3.Button"
        android:layout_width="285dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:backgroundTintMode="add"
        android:fontFamily="casual"
        android:text="Play Local"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_customise"
        style="@style/Widget.Material3.Button"
        android:layout_width="285dp"
        android:layout_height="56dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="216dp"
        android:backgroundTintMode="add"
        android:fontFamily="casual"
        android:text="Customise"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_settings2"
        style="@style/MaterialAlertDialog.Material3.Title.Icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="SettingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>