<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.ImplodingDoggos.FullscreenContainer"
    tools:context=".FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="?attr/fullscreenTextColor"
        android:textSize="50sp"
        android:textStyle="bold"
        android:text="testing......."/>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_error"
        android:fitsSystemWindows="true">


        <Button
            android:id="@+id/btn_playOnline"
            style="@style/Widget.Material3.Button"
            android:layout_width="185dp"
            android:layout_height="56dp"
            android:layout_marginStart="472dp"
            android:layout_marginTop="108dp"
            android:backgroundTintMode="add"
            android:fontFamily="casual"
            android:text="Play Online"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_playLocal"
            style="@style/Widget.Material3.Button"
            android:layout_width="185dp"
            android:layout_height="56dp"
            android:layout_marginStart="472dp"
            android:layout_marginTop="24dp"
            android:backgroundTintMode="add"
            android:fontFamily="casual"
            android:text="Play Local"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_playOnline" />

        <Button
            android:id="@+id/btn_customise"
            style="@style/Widget.Material3.Button"
            android:layout_width="185dp"
            android:layout_height="56dp"
            android:layout_marginStart="472dp"
            android:layout_marginTop="24dp"
            android:backgroundTintMode="add"
            android:fontFamily="casual"
            android:text="Customise"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_playLocal" />

        <Button
            android:id="@+id/btn_signIn"
            style="@style/Widget.Material3.Button"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="348dp"
            android:fontFamily="casual"
            android:text="@string/action_signIn"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:background="@null"
            android:contentDescription="SettingsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/ic_menu_manage" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="393dp"
            android:layout_height="283dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/txt_plrName"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Guest14849372904"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:layout_editor_absoluteX="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>